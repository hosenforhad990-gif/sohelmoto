      {name:'Oil Filter', price: '৳600', img:'https://images.unsplash.com/photo-1580910051070-2b8b4d4d1a86?auto=format&fit=crop&w=800&q=60'},
      {name:'Rear Shock', price: '৳4,500', img:'https://images.unsplash.com/photo-1613532532647-97a8f1926a3f?auto=format&fit=crop&w=800&q=60'},
      {name:'Brake Disc', price: '৳2,100', img:'https://images.unsplash.com/photo-1581579183561-3b9b6e6f0701?auto=format&fit=crop&w=800&q=60'}
    ];

    function populateProducts(){
      const grid = document.getElementById('productsGrid');
      sampleProducts.forEach(p => {
        const el = document.createElement('div'); el.className='product card';
        el.innerHTML = `\n          <img src="${p.img}" alt="${p.name}" />\n          <h3>${p.name}</h3>\n          <div class="price">${p.price}</div>\n          <a class="buy" href="#contact">Enquire</a>\n        `;
        grid.appendChild(el);
      });
    }

    function toggleMenu(){
      const nav = document.querySelector('.nav-links');
      const btn = document.querySelector('.menu-toggle');
      if(nav.style.display === 'flex'){
        nav.style.display=''; btn.setAttribute('aria-expanded','false');
      } else {
        nav.style.display='flex'; nav.style.flexDirection='column'; nav.style.background='rgba(5,5,5,0.95)'; nav.style.position='absolute'; nav.style.top='72px'; nav.style.right='20px'; nav.style.padding='12px'; nav.style.borderRadius='8px'; btn.setAttribute('aria-expanded','true');
      }
    }

    function submitContact(e){
      e.preventDefault();
      const name = document.getElementById('name').value.trim();
      const email = document.getElementById('email').value.trim();
      const subject = document.getElementById('subject').value.trim();
      const message = document.getElementById('message').value.trim();
      const msgEl = document.getElementById('contactMsg');

      // Simple client-side validation
      if(!name||!email||!message){ msgEl.textContent='Please complete required fields.'; return }

      // This demo doesn't have a backend. For production, POST to your server or use a service (Formspree, Netlify Forms, etc.)
      msgEl.textContent = 'Thanks, your message has been prepared. For this demo the form won\'t send — integrate a backend or use a form service.';

      // Optionally open user's email client with mailto (uncomment if desired):
      // window.location.href = `mailto:info@sohelmoto.com?subject=${encodeURIComponent(subject||'Contact from website')}&body=${encodeURIComponent('Name: '+name+'\nEmail: '+email+'\n\n'+message)}`;

      // reset form
      e.target.reset();
    }

    // Init
    populateProducts();
  </script></body>
